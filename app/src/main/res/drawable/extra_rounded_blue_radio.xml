<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked state -->
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#ffffff" />
                    <stroke
                        android:width="1dp"
                        android:color="#A1A1A1" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Checked state -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Gradient background -->
            <item>
                <shape>
                    <corners android:radius="20dp" />
                    <gradient
                        android:startColor="#202587"
                        android:endColor="#1822E3"
                        android:type="linear"
                        android:angle="0" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
